  <Color x:Key="Gray-200">#D5DEE0</Color>
  <Color x:Key="Gray-300">#A0B3B8</Color>
  <Color x:Key="Gray-400">#71898F</Color>
  <Color x:Key="Gray-500">#506D74</Color>
