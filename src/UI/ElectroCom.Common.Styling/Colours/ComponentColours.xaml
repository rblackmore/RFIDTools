  <Color x:Key="Error-100">#FFD1D1</Color>
  <Color x:Key="Error-200">#E38A8A</Color>
  <Color x:Key="Error-300">#BA4949</Color>
  <Color x:Key="Error-400">#AD1818</Color>
  <Color x:Key="Error-500">#990808</Color>
