  <Color x:Key="Gray-700">#1F3136</Color>
  <Color x:Key="Gray-800">#0A171A</Color>
  <Color x:Key="Gray-900">#000A0D</Color>

  <Color x:Key="Success-100">#F3FFF2</Color>
  <Color x:Key="Success-200">#B3EDB2</Color>
  <Color x:Key="Success-300">#72CC70</Color>
  <Color x:Key="Success-400">#3CA63A</Color>
  <Color x:Key="Success-500">#178C15</Color>
  <Color x:Key="Success-600">#0E6E0C</Color>
  <Color x:Key="Success-700">#074A05</Color>
  <Color x:Key="Success-800">#022E01</Color>
