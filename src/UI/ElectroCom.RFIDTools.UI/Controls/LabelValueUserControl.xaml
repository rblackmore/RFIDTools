<UserControl x:Class="ElectroCom.RFIDTools.UI.Controls.LabelValueUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectroCom.RFIDTools.UI.Controls"
             mc:Ignorable="d">
    <WrapPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:LabelValueUserControl}}">
        <TextBlock Text="{Binding Label}" FontWeight="SemiBold" FontSize="{Binding FontSize}"/>
        <TextBlock Text="{Binding Value}" FontSize="{Binding FontSize}" />
    </WrapPanel>
</UserControl>
