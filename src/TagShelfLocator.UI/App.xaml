<Application x:Class="TagShelfLocator.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TagShelfLocator.UI"
             xmlns:viewModels="clr-namespace:TagShelfLocator.UI.MVVM.ViewModels"
             xmlns:views="clr-namespace:TagShelfLocator.UI.MVVM.Views">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- View Model View Mapper -->
            <DataTemplate DataType="{x:Type TypeName=viewModels:InventoryViewModel}">
                <views:InventoryView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type TypeName=viewModels:SettingsViewModel}">
                <views:SettingsView/>
            </DataTemplate>
            
            <!-- Themes -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Themes/Colours.xaml"/>
                <ResourceDictionary Source="./Themes/GeneralStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
