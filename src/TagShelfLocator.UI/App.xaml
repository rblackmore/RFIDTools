<Application x:Class="TagShelfLocator.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TagShelfLocator.UI"
             xmlns:viewModels="clr-namespace:TagShelfLocator.UI.ViewModels"
             xmlns:views="clr-namespace:TagShelfLocator.UI.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModels:InventoryViewModel}">
            <views:InventoryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
