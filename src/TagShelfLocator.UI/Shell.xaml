<Window x:Class="TagShelfLocator.UI.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagShelfLocator.UI"
        xmlns:views="clr-namespace:TagShelfLocator.UI.MVVM.Views" 
        xmlns:viewModels="clr-namespace:TagShelfLocator.UI.MVVM.ViewModels"
        mc:Ignorable="d"
        Height="750" Width="1200"
        Background="{StaticResource NeutralBrush}"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <viewModels:ShellViewModelLocator x:Key="vml"/>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily" Value="Open Sans"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <Binding Source="{StaticResource vml}" Path="ViewModel"/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border 
            BorderThickness="0,0,0,2" 
                BorderBrush="{StaticResource BlackBrush}" 
                MouseDown="Border_MouseDown" 
                Grid.ColumnSpan="2" 
                Background="{StaticResource PrimaryBrush}">

            <Grid HorizontalAlignment="Stretch">
                <Label
                    Content="Tag Shelf Locator"
                    FontSize="15"
                    FontFamily="Work Sans"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Foreground="{StaticResource BlackBrush}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Padding="0,0,0,5" Content="_" Style="{StaticResource WindowButton}"/>
                    <Button Content="☐" Style="{StaticResource WindowButton}"/>
                    <Button Content="✕" Style="{StaticResource WindowButton}"/>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>


    <!--<DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="8" Height="75" Width="75" Content="Inventory" Command="{Binding NavigateToInventory}"/>
            <Button Margin="8" Height="75" Width="75" Content="Settings" Command="{Binding NavigateToSettings}"/>
        </StackPanel>
        <Grid>
            <ContentControl Content="{Binding Path=NavigationService.CurrentViewModel}"/>
        </Grid>
    </DockPanel>-->
</Window>
        