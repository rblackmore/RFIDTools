<Window x:Class="TagShelfLocator.UI.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagShelfLocator.UI"
        xmlns:viewModels="clr-namespace:TagShelfLocator.UI.ViewModels"
        xmlns:views="clr-namespace:TagShelfLocator.UI.Views"
        mc:Ignorable="d"
        Title="Shell" Height="900" Width="1540">
    <Window.Resources>
        <viewModels:ShellViewModelLocator x:Key="vml"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource vml}" Path="ViewModel"/>
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="8" Height="75" Width="75" Content="Inventory" Command="{Binding NavigateToInventory}"/>
            <Button Margin="8" Height="75" Width="75" Content="Settings" Command="{Binding NavigateToSettings}"/>
        </StackPanel>
        <Grid>
            <ContentControl Content="{Binding Path=NavigationService.CurrentViewModel}"/>
        </Grid>
    </DockPanel>
</Window>
        